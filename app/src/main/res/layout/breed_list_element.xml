<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <View
        android:id="@+id/v_breed_element"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/tv_breed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/v_breed_element"
        app:layout_constraintStart_toStartOf="@id/v_breed_element"
        app:layout_constraintTop_toTopOf="@id/v_breed_element"
        tools:text="Shepard" />

    <TextView
        android:id="@+id/tv_subbreed_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/v_breed_element"
        app:layout_constraintStart_toEndOf="@id/tv_breed_name"
        app:layout_constraintTop_toTopOf="@id/v_breed_element"
        tools:text="(1 subbreed)" />

    <ImageView
        android:id="@+id/_iv_forward_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_forward_arrow"
        app:layout_constraintBottom_toBottomOf="@id/v_breed_element"
        app:layout_constraintEnd_toEndOf="@id/v_breed_element"
        app:layout_constraintTop_toTopOf="@id/v_breed_element" />

</androidx.constraintlayout.widget.ConstraintLayout>